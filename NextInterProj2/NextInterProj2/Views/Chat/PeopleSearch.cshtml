@model IEnumerable<NextInterProj2.Models.UserProfile>
@{
    ViewBag.Title = "People search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
<table>
    <tr>
        <td>Name</td>
        <td>Surname</td>
        <td>Speak</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>

                @Html.Raw("<img src=\"data:image/jpeg;base64," + Convert.ToBase64String(item.Image) + "\" width=\"189\" height=\"255\" />")
            </td>
            <td>
                @Html.DisplayFor(model => item.FirstName)
                <br/>@Html.DisplayFor(model => item.LastName)
                <br/>@Html.DisplayFor(model => item.Email)
                <br/>@Html.DisplayFor(model => item.MobileNumber)
                <br/>@Html.DisplayFor(model => item.BirthDate)</td>
            <td><a href="~/Chat/Say?recieverId=@item.UserId">Let`s speak!</a></td>
        </tr>       
    }
</table>

